<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btn_planner"
        android:layout_width="201dp"
        android:layout_height="61dp"
        android:layout_marginBottom="28dp"
        android:background="#F44336"
        android:text="☰ Planner"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_grocery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_grocery"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:layout_marginBottom="24dp"
        android:background="#F44336"
        android:foregroundTint="#F44336"
        android:text="✓ Grocery"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_recipe"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:layout_marginBottom="124dp"
        android:background="#F44336"
        android:foregroundTint="#F44336"
        android:text="⟡ Recipe"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listview_today"
        android:layout_width="310dp"
        android:layout_height="234dp"
        android:background="#FFFFFF"
        android:divider="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="171dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:background="#F44336"
        android:fontFamily="@font/nothing_you_could_do"
        android:gravity="center"
        android:text="Today's menu"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>